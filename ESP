#include <WiFi.h>
#include <HTTPClient.h>

const char* ssid = "SEU_WIFI";       // SSID da sua rede WiFi
const char* password = "SUA_SENHA";  // Senha do WiFi

const int relePin = 5; // pino conectado ao módulo relé

unsigned long ultimoPing = 0;
const unsigned long intervalo = 60000; // 1 minuto em ms

void setup() {
  pinMode(relePin, OUTPUT);
  digitalWrite(relePin, LOW); // começa desligado

  Serial.begin(115200);

  WiFi.begin(ssid, password);
  Serial.print("Conectando ao WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.print(".");
  }
  Serial.println("\nConectado!");
}

void loop() {
  unsigned long agora = millis();

  if (agora - ultimoPing >= intervalo) {
    ultimoPing = agora;

    if (WiFi.status() == WL_CONNECTED) {
      HTTPClient http;

      // URL do seu PHP (ajuste conforme seu servidor)
      String url = "http://seusite.com/virada.php?id=1&status=1&tag=ABC123";
      http.begin(url);

      int httpCode = http.GET();
      if (httpCode == 200) {
        String payload = http.getString();
        Serial.println("Resposta do servidor: " + payload);

        // Se PHP retornar "ligada" ou "1"
        if (payload.indexOf("ligada") >= 0 || payload == "1") {
          digitalWrite(relePin, HIGH); // liga relé
          Serial.println("Relé ligado");
        } else {
          digitalWrite(relePin, LOW);  // desliga relé
          Serial.println("Relé desligado");
        }
      } else {
        Serial.println("Erro HTTP: " + String(httpCode));
      }
      http.end();
    } else {
      Serial.println("WiFi desconectado!");
    }
  }
}
